import discord
from discord.ext import commands
import ping3

intents = discord.Intents.default()
intents.message_content = True  

bot = commands.Bot(command_prefix='!', intents=intents)

@bot.command()
async def pinghost(ctx, host: str):
    response_time = ping3.ping(host)
    if response_time is not None:
        await ctx.send(f"`ğŸŒ Host {host} is reachable. Response time: {response_time:.2f} ms`")
    else:
        await ctx.send(f"`ğŸŒ Host {host} is unreachable.`")

bot.run('MTMzMzA3MTY2MjU1MTQwMDQ4OQ.GkIpDp.lCuGe04EgtgHasbWn8WxNFTyVRH370S8fCCeas')  
